<div class="container">
  <div class="row mt-4 mb-3">
    <div class="col">
      <%= form_tag castles_path, method: :get do %>
      <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Find a location or princess"%>

  <% end %>
    </div>
  </div>
  <h1>Welcome to Royal BNB</h1>
  <p>Come into the castle of your choice</p>


      <%#= cl_image_tag ("zchftnfqqiy3zzzlsswe.jpg") %>
<% @castles.each do |castle| %>
  <div class="card-category"style="background-image: linear-gradient(rgba(255,255,255,0.3), rgba(255,255,255,0.3)),
  url('<%= cl_image_path castle.photo, height: 300, width: 400, crop: :fill %>')">
     <div class="front-gimmick">
     <h1><%= link_to castle.name, castle_path(castle.id) %></h1></div>

       </div>
<% end %>
</div>
