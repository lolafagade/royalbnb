<div class="container">
  <div class="row">
    <div class="col-12 display-photos"><%= cl_image_tag @castle.photo%></div>
    <div class="col-6"><h1><%= @castle.name %></h1>
      <p><i><%= @castle.description %></i></p>
      <i class="fas fa-toolbox icon"></i> <%= @castle.equipment %></p><p><i class="fas fa-car icon"></i> <%= @castle.vehicle %></p>
      <p><i class="fas fa-frog icon"></i> <%= @castle.prince %></p>
    </div>
    <div class="col-2">
      <%= cl_image_tag @castle.user.avatar, crop: :fill, class: 'avatar-large' %>
    </div>
    <div class="col-4">
      <h3>Book now!</h3>
      <%= simple_form_for [@castle, @booking] do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
      <%= f.input :check_in_date, as: :date %>
      <%= f.input :chech_out_date, as: :date %>
      <%= f.input :special_request, as: :text, placeholder: "Champagne fountains, spiked punch, acid apple" %>
      <%#= f.button :submit, method: :patch %>
      <%= f.button :submit, class: 'btn-homepage' %>
      <% end %>
    </div>
  </div>
</div>


<h2>
  <%= pluralize @castle.reviews.size, "review" %>
</h2>

<div id="reviews">
  <% if @castle.reviews.blank? %>
    Be the first to leave a review for <%= @castle.name %>
  <% else %>
    <% @castle.reviews.each do |review| %>
      <%= render 'reviews/show', review: review %>
    <% end %>
  <% end %>
</div>

<%= render 'reviews/form', castle: @castle, review: @review %>
